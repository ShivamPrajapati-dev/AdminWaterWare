<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PendingOrderDetails">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/qqq"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:id="@+id/abc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/nameOfUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:padding="10dp"
                        android:text="Name"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nameOfUser"
                        android:layout_alignParentStart="true"
                        android:padding="10dp"
                        android:id="@+id/phoneNumberUser"
                        android:text="Phone Number"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:text="Date"
                        android:id="@+id/orderDate"
                        android:padding="10dp"/>


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/xyz"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintTop_toBottomOf="@id/abc">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/addIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@drawable/ic_location_on_black_24dp" />

                    <TextView
                        android:id="@+id/real"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/addIcon"
                        android:padding="10dp"
                        android:text="Address"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/id2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/real"
                        android:layout_toRightOf="@id/addIcon"
                        android:padding="10dp"
                        android:text="address" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardElevation="2dp"
                android:id="@+id/billl"
                app:cardUseCompatPadding="true"
                app:layout_constraintTop_toBottomOf="@id/xyz">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/menuicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@drawable/ic_work_black_24dp" />

                    <TextView
                        android:id="@+id/items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/menuicon"
                        android:padding="10dp"
                        android:text="Order status"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/tankCleaning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/items"
                        android:layout_toRightOf="@id/menuicon"
                        android:padding="10dp"
                        android:text="Job assigned to : "
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Rs300"
                        android:layout_toRightOf="@id/menuicon"
                        android:padding="10dp"
                        android:id="@+id/visiting"
                        android:text="status"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/Rs300"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/items"
                        android:layout_toRightOf="@id/tankCleaning"
                        android:padding="10dp"
                        android:text="Not assigned yet"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/Rs50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Rs300"
                        android:layout_toRightOf="@id/visiting"
                        android:padding="10dp"
                        android:text="show status"
                        android:textSize="16sp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="#000"
                        android:visibility="invisible"
                        android:text="Mark as done"
                        android:id="@+id/button"
                        android:textColor="#ffffff"
                        android:padding="10dp"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/billl">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/vieww"
                        android:layout_width="1dp"
                        android:layout_height="200dp"

                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:background="#bdbdbd" />

                    <ImageView
                        android:id="@+id/today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_today_black_24dp" />

                    <TextView
                        android:id="@+id/pd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/today"
                        android:padding="10dp"
                        android:text="Preferred Days"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pd"
                        android:layout_toRightOf="@id/today"
                        android:padding="10dp"
                        android:text="days" />

                    <ImageView
                        android:id="@+id/pt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/vieww"
                        android:padding="10dp"
                        android:src="@drawable/ic_access_time_black_24dp" />

                    <TextView
                        android:id="@+id/aaa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/pt"
                        android:padding="10dp"
                        android:text="Preferred Time"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pt"
                        android:layout_toRightOf="@id/vieww"
                        android:padding="10dp"
                        android:text="From : "
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/timeFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pt"
                        android:layout_toRightOf="@id/from"
                        android:padding="10dp"
                        android:text="Time" />

                    <TextView
                        android:id="@+id/to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/from"
                        android:layout_toRightOf="@id/vieww"
                        android:padding="10dp"
                        android:text="To : "
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/timeTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/timeFrom"
                        android:layout_toRightOf="@id/to"
                        android:padding="10dp"
                        android:text="Time" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>




        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/qqq"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:text="Assign a cleaner"

        android:background="#0335ff"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent">


    </Button>


</android.support.constraint.ConstraintLayout>