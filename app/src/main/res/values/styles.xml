<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bnv" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">8sp</item>
    </style>
    <style name="bnv_active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">7sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FullScreenDialogTheme" parent="Theme.AppCompat.DayNight.DialogWhenLarge">

        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
